<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_roo_show"
        android:orientation="vertical"
         >

        <ImageView
            android:id="@+id/ivRecommentCoverPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_photo_defualt" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvRecommentTitleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="丽江"
                android:textSize="16.0sp" />
            <TextView
                android:id="@+id/tvRecommentContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丽江地处滇西北高原，金沙江中游。以“二山、一城、一湖、一江、一文化、一风情”"
                android:padding="3dp"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressLoad"
        style="?android:attr/progressBarStyleSmallInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>