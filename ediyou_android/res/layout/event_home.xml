<?xml version="1.0" encoding="utf-8"?>
<com.elephant.ediyou.view.ScrollViewIncludeViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svivEventHome"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llEventHome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/flTopEvent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/repeat_blod_slant"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="5dp" >

                <LinearLayout
                    android:baselineAligned="false"
                    android:id="@+id/viewEvent"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <LinearLayout
                        android:id="@+id/llEventPhoto"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/bg_roo_show"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ivEventPhoto"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:baselineAligned="false"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="1dp" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_collect_smail" />

                                <TextView
                                    android:id="@+id/tvEventLikeCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textColor="#B0D983"
                                    android:textSize="11dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_more_photo_smail" />

                                <TextView
                                    android:id="@+id/tvEventRetraCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textColor="#B0D983"
                                    android:textSize="11dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_koala" />

                                <TextView
                                    android:id="@+id/tvEventCurrCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="30"
                                    android:textColor="#B0D983"
                                    android:textSize="11dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/"
                                    android:textColor="#B0D983"
                                    android:textSize="11dp" />

                                <TextView
                                    android:id="@+id/tvEventLimitCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textColor="#B0D983"
                                    android:textSize="11dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvEventTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="丽江三日游"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tvEventType"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="游山玩水"
                            android:textColor="#B0D983"
                            android:textSize="13dp" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/memu_item_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="开始时间："
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/tvStartTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="结束时间："
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/tvEndTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="活动费用： "
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tvEventCost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100/人/次"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <com.elephant.ediyou.view.GridViewInScrollView
                android:id="@+id/gvEventShow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/bg_nor"
                android:cacheColorHint="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:horizontalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="2"
                android:padding="5dp"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" >
            </com.elephant.ediyou.view.GridViewInScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvShowNo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/bg_describe"
            android:gravity="center"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            android:visibility="gone" />
    </FrameLayout>

</com.elephant.ediyou.view.ScrollViewIncludeViewPager>