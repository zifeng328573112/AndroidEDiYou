            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_edit_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible" />
    </RelativeLayout>

