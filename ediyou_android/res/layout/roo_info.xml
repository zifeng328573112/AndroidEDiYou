                        android:inputType="phone"
                        android:textColor="#A0A0A0"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:maxLength="11" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
